{
  "compilerOptions": {
    "outDir": "./kiwi",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "jsx": "react",
    "noEmit": false,
    "lib": ["es2017", "dom"],
    "allowJs": true
  },
  "exclude": ["node_modules", "dist"]
}
